            {
                id: 7,
                cat: "Veggie",
                nombre: "Veggie Zen",
                precio: 6500,
                ingredientes: "Pepino, zanahoria, palta y queso. Cubierto de ciboulette.",
                imagen: "https://images.unsplash.com/photo-1559410545-0bdcd187e0a6?auto=format&fit=crop&q=80&w=800",
                piezas: "8 Piezas"
            }
        ];

        // ==========================================
        // L√ìGICA DEL SITIO (No tocar preferiblemente)
        // ==========================================
        let categoriaActual = "Todos";
        let busquedaActual = "";

        const inputBuscador = document.getElementById('buscador');
        const grid = document.getElementById('grid-sushi');
        const emptyState = document.getElementById('sin-resultados');

        // Escuchar cuando el usuario escribe
        inputBuscador.addEventListener('input', (e) => {
            busquedaActual = e.target.value.toLowerCase();
            render();
        });

        // Funci√≥n para cambiar categor√≠a
        function filtrar(cat) {
            categoriaActual = cat;
            
            // Est√©tica de botones
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
                if(btn.innerText === (cat === 'Frios' ? 'ROLLS FR√çOS' : cat === 'Hot' ? 'ROLLS CALIENTES' : cat)) {
                    btn.classList.add('active');
                }
            });
            render();
        }

        function abrirWsp(msg) {
            const url = `https://wa.me/${WSP_NUMBER}?text=${encodeURIComponent(msg)}`;
            if (!window.open(url, '_blank')) {
                document.getElementById('wsp-modal').style.display = 'flex';
            }
        }

        function render() {
            // Filtrar productos
            const filtrados = productos.filter(p => {
                const coincideCat = (categoriaActual === "Todos" || p.cat === categoriaActual);
                const coincideBusqueda = (p.nombre.toLowerCase().includes(busquedaActual) || p.ingredientes.toLowerCase().includes(busquedaActual));
                return coincideCat && coincideBusqueda;
            });

            // Mostrar/Ocultar mensaje de "no hay resultados"
            emptyState.style.display = filtrados.length === 0 ? 'block' : 'none';

            // Dibujar en pantalla
            grid.innerHTML = filtrados.map(item => `
                <div class="sushi-card glass rounded-3xl overflow-hidden flex flex-col h-full animate-fade">
                    <div class="relative h-48 overflow-hidden">
                        <img src="${item.imagen}" class="w-full h-full object-cover">
                        <div class="absolute top-3 left-3 bg-black/60 backdrop-blur-md text-[10px] text-white px-2 py-1 rounded-md uppercase font-bold tracking-widest border border-white/10">
                            ${item.piezas}
                        </div>
                        ${item.popular ? `
                            <div class="absolute top-3 right-3 bg-orange-600 text-white text-[9px] font-bold px-2 py-1 rounded-md uppercase">TOP</div>
                        ` : ''}
                    </div>
                    <div class="p-5 flex flex-col flex-grow">
                        <div class="flex justify-between items-start mb-2">
                            <h4 class="text-base font-bold text-white leading-tight">${item.nombre}</h4>
                            <span class="text-orange-500 font-bold text-sm">$${item.precio.toLocaleString('es-AR')}</span>
                        </div>
                        <p class="text-gray-400 text-xs leading-relaxed mb-5 flex-grow">${item.ingredientes}</p>
                        <button onclick="abrirWsp('Hola! üëã Quiero pedir: ${item.nombre} (${item.piezas})')" 
                                class="w-full bg-orange-600/10 hover:bg-orange-600 border border-orange-600/30 text-orange-500 hover:text-white py-2.5 rounded-xl text-xs font-bold transition-all">
                            PEDIR ESTE
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Carga inicial
        window.onload = render;
    </script>
